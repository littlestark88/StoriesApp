<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.storyapp">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.StoryAppApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoryApp.NoActionBar"
        tools:targetApi="31">
        <receiver
            android:name=".presentasion.widget.StoriesAppWidget"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/stories_app_widget_info" />
        </receiver>
        <service
            android:name="com.example.storyapp.presentasion.widget.StoryWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <activity
            android:name=".presentasion.stories.DetailStoriesActivity"
            android:exported="false" />
        <activity
            android:name=".presentasion.camera.CameraActivity"
            android:exported="false" />
        <activity
            android:name=".presentasion.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentasion.onboarding.OnBoardingActivity"
            android:exported="false" />
        <activity
            android:name=".presentasion.splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentasion.register.RegisterActivity"
            android:exported="true"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.StoryApp.NoActionBar" />
        <activity
            android:name=".presentasion.MainActivity"
            android:exported="true" />
    </application>

</manifest>